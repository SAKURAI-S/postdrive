<!-- ユーザー情報詳細 -->
<!DOCTYPE html>
<div class="col-xs-9">
<div class="table-responsive">
<body>
    <h2>ユーザー情報</h2>
<% @user.posts.each do |list| %>
    #画像、ユーザネーム、投稿をそれぞれ表示
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %>
		<tr>
			<th>name</th>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= @user.introduction %></td>
		</tr>
	</table>
</div>
<% end %>

	<%=link_to '', edit_user_path(@user.id),class: "col-xs-5 btn btn-default glyphicon glyphicon-wrench" %>
</body>