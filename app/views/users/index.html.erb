<!-- ユーザー情報詳細 -->
<!DOCTYPE html>
  <div class="col-xs-9">
    <div class="table-responsive">
      <table class="table">
        <h2>ユーザー詳細</h2>
          <thead>
            <tr class="danger">
              <th>ユーザー画像</th>
              <th>名前</th>
              <th>コメント</th>
              <th><%= link_to '編集', edit_user_path(@user.id) %></th>
            </tr>
          </thead>
          <tbody>
            <tr class="success">
              <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback:"no_image.jpg" %></th>
              <th><%= @user.username %></th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</html>