<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<!-- body部分 -->
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
   <div class="container">
        <nav>
         <ul class="left nav navbar-nav navbar-left">
          <%= link_to root_path do %>
          <%= image_tag "Postdrive-logo.png", :size =>'150x70' %>
          <% end %>
         </ul>
        </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
           <% if user_signed_in? %>
              <li class="">
               <%= link_to current_user.username %>
              </li>
              <li class="">
                <%= link_to ' TOP画面', root_path, :class => "glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to ' 投稿一覧', lists_path, :class => "glyphicon glyphicon-user" %>
              </li>
              <li class="">
               <%= link_to 'ユーザーページ', users_path, :class => "glyphicon glyphicon-user" %>
              </li>
              <li class="">
               <%= link_to ' 新規投稿画面', lists_new_path, :class => "glyphicon glyphicon-user" %>
              </li>
              <li class="">
                <%= link_to ' ログアウト', destroy_user_session_path,method: :delete, :class => "glyphicon glyphicon-log-out" %>
              </li>
            <% else %>
             <li class="">
                <%= link_to ' TOP画面',root_path, :class => "glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to ' About',about_path, :class => "glyphicon glyphicon-link"%>
              </li>
              <li class="">
                <%= link_to ' サインアップ', new_user_registration_path, :class => "glyphicon glyphicon-edit"%>
              </li>
              <li class="">
                <%= link_to 'ログイン', new_user_session_path, :class =>"glyphicon glyphicon-log-in" %>
              </li>
            <% end %>
          </ul>
      </nav>
    </div>
  </header>
    <div class="main">
      <div class="container">
        <div class="row">
          <%if flash[:notice]%>
            <%= flash[:notice] %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
           <div class="col-xs-3 col-xs-offset-9">
              <p>CopyRight Postdrive.inc</p>
           </div>
        </div>
      </div>
    </footer>
  </body>
</html>
